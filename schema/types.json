{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HookMeta",
  "description": "Meta information for a Hook, styled like ui.nuxt.com API definitions.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "props": {
      "type": "array",
      "items": { "$ref": "#/definitions/PropertyMeta" }
    },
    "returns": {
      "type": "array",
      "items": { "$ref": "#/definitions/PropertyMeta" }
    },
    "types": {
      "type": "array",
      "description": "Standalone interfaces, type aliases, and enums defined in the hook file.",
      "items": { "$ref": "#/definitions/TypeMeta" }
    }
  },
  "required": ["name", "description", "props", "returns"],
  "definitions": {
    "PropertyMeta": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "type": { "type": "string" },
        "rawType": { "type": "string" },
        "required": { "type": "boolean" },
        "default": { "type": "string" },
        "schema": { "type": "array" }
      },
      "required": ["name", "type"]
    },
    "TypeMeta": {
      "type": "object",
      "properties": {
        "kind": { "type": "string", "enum": ["interface", "type", "enum"] },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "properties": {
          "type": "array",
          "items": { "$ref": "#/definitions/PropertyMeta" }
        },
        "members": { "type": "array" },
        "type": { "type": "string" },
        "rawType": { "type": "string" },
        "schema": { "type": "array" }
      },
      "required": ["kind", "name"]
    }
  }
}
