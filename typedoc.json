{
  "$schema": "https://typedoc.org/schema.json",

  // Essentials
  "name": "sse-hooks",
  "tsconfig": "packages/hooks/tsconfig.json",
  "jsDocCompatibility": true,

  "entryPoints": ["packages/hooks/src/**/*.ts"],
  "entryPointStrategy": "expand",

  "json": "./generated/typedoc/all.json",
  "out": "./generated/typedoc",
  "readme": "none",

  // Exclude
  "exclude": [
    "packages/hooks/src/**/demo.*",
    "packages/hooks/src/**/test.*",
    "packages/hooks/src/**/index.ts"
  ],

  "externalPattern": ["**/node_modules/**"],
  "excludeExternals": true,
  "excludePrivate": true,
  "excludeProtected": true,
  "excludeInternal": true,
  "excludeNotDocumented": true,
  "excludeReferences": true,

  "excludeTags": [
    "@override",
    "@virtual",
    "@privateRemarks",
    "@satisfies",
    "@overload",
    // "@example",
    "@see"
  ],

  // Plugins
  "plugin": [
    "typedoc-plugin-mdn-links",
    "typedoc-plugin-markdown",
    "typedoc-plugin-missing-exports"
  ],

  // Validation
  "validation": {
    "notExported": true,
    "invalidLink": true,
    "notDocumented": false
  },
  // Emit warnings for any tags not listed here
  "blockTags": [
    "@param",
    "@returns",
    "@see",
    "@example",
    "@template",
    "@default",
    "@category"
  ],

  // Markdown and styles
  // "allReflectionsHaveOwnDocument": true,
  "outputFileStrategy": "members",
  "hidePageTitle": true,
  "hidePageHeader": true,
  // "hideInPageTOC": true,
  // "hidePageContents": true,
  "hideGenerator": true,
  "hideBreadcrumbs": true,

  // "hideParameterTypesInTitle": true,
  "parametersFormat": "table",

  "headings": {
    "readme": false
    // "members": true
  },
  "navigation": {
    "includeCategories": false,
    "includeGroups": false,
    "includeFolders": false
  },
  "sort": ["alphabetical"],
  "preserveLinkText": true,
  "placeInternalsInOwningModule": true
}
